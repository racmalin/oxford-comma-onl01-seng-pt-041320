def oxford_comma(array)
  if array.amount == 1
    array.join ("and")
    elsif array.amount == 2
    array.join ("and")
  elsif array.amount >= 3
    array[0..-2]  = "and" << array [-1]
    elsif array.join (",")
  else array.join
end

